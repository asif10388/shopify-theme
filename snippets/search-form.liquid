
<form action="/search" class="relative {{search_margin}} text-gray-600 lg:block hidden" method="get" role="search">
    <input class="border-2 w-80 border-gray-300 bg-white h-10 pl-2 pr-8 rounded-lg text-sm focus:outline-none" type="text" name="q" value="{{search.terms | escape}}" placeholder="Search" id="searchInput">
    <button class="inline-block absolute right-0 top-0 mt-3 mr-2" type="submit">
        <svg class="text-gray-600 h-4 w-4 fill-current" height="512px" id="Capa_1" style="enable-background:new 0 0 56.966 56.966;" version="1.1" viewbox="0 0 56.966 56.966" width="512px" x="0px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" y="0px">
            <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z"/>
        </svg>
    </button>
            <ul class="rounded-lg py-2 bg-gray-100 border border-gray-100 w-full mt-2" id="searchResults"></ul>

    {% if show_labels == true %}
        <div class="flex mt-4">
            <div class="flex">
                <label class="inline-flex items-center mr-3">
                    <input id="product_type" name="type" value="product" class="form-checkbox h-5 w-5 text-gray-600" type="checkbox"><span class="ml-2 text-gray-700">Product</span>
                </label>

                <label class="inline-flex items-center mr-3">
                    <input id="product_type" name="type" value="article" class="form-checkbox h-5 w-5 text-red-600" type="checkbox"><span class="ml-2 text-gray-700">Article</span>
                </label>

                <label class="inline-flex items-center mr-3">
                    <input id="product_type" name="type" value="pages" class="form-checkbox h-5 w-5 text-red-600" type="checkbox"><span class="ml-2 text-gray-700">Pages</span>
                </label>
            </div>
        </div>
    {% endif %}
</form>